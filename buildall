PREFIX="/usr"
STAGEING="/tmp/xxx"

for arg in LFSToolKit
# LFSSetWallpaper LFSDesktop LFSWManager LFSPanel LFSApplications
	do
		tar -xvf ${arg}-*.tar.gz
		pushd ${arg}
			./configure --prefix=${PREFIX}
			make
			make install DESTDIR=${STAGEING}
		popd
	done